@using OA.DATA
@model List<User>
<h2>New Create</h2>


<div class="card shadow borderborder-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    User List
                </h2>
            </div>
        </div>

    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="User" asp-action="Create" class="btn btn-primary">

                    <i class="bi bi-plus-circle"></i>Create New Category
                </a>

            </div>
        </div>


        <table class="table table-bordered table-striped">
            <thead>

                <tr>
                    <th>UserName</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>IP Address</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Address</th>

                    <th> </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.UserName</td>
                        <td>@obj.Email</td>
                        <td>@obj.Password</td>
                        <td>@obj.IPAddress</td>
                        <td>@obj.UserProfile.FirstName</td>
                        <td>@obj.UserProfile.LastName</td>
                        <td>@obj.UserProfile.Address</td>

                        <td>
                            <div class="w-75 btn-group" rolw="group">
                                <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>

                                <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i>Delete

                                </a>

                            </div>
                        </td>

                    </tr>
                }

            </tbody>

        </table>

    </div>


</div>

